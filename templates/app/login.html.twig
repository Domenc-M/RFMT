{% extends 'base.html.twig' %}

{% block title %}Login {{ parent() }}{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}




<form action="{{ path('app_login') }}" method="post">

    <div class="form-container">

        <h2 class="form-title">Se connecter</h2>

        <div class="form-subset">
            <label class="formLabel" for="username">Pseudo :</label>
            <input class="formText" type="text" id="username" name="_username" value="{{ last_username }}"/>
        </div>

        <div class="form-subset">
            <label class="formLabel" for="password">Mot de passe :</label>
            <input class="formText" type="password" id="password" name="_password"/>
        </div>

        <button class="blue-button formSubmit" type="submit">login</button>
    </div>
</form>


{% endblock %}