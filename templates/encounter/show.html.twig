{% extends 'base.html.twig' %}

{% block title %}Encounter{% endblock %}

{% block body %}
    <h1>Encounter</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ encounter.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ encounter.name }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ encounter.summary }}</td>
            </tr>
            <tr>
                <th>Fluff</th>
                <td>{{ encounter.fluff }}</td>
            </tr>
            <tr>
                <th>Crunch</th>
                <td>{{ encounter.crunch }}</td>
            </tr>
            <tr>
                <th>Rewards</th>
                <td>{{ encounter.rewards }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ encounter.createdAt ? encounter.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ encounter.updatedAt ? encounter.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_searchOwn') }}">back to list</a>

    <a href="{{ path('encounter_edit', {'id': encounter.id}) }}">edit</a>

    {{ include('encounter/_delete_form.html.twig') }}
{% endblock %}
